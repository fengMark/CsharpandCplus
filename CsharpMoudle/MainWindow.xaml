<Window x:Class="CsharpMoudle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Content="Button" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"  />
        <TextBox Name="num1" Grid.Column="1" DataContext="{Binding }" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100"/>
        <TextBox Name="num2" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100"/>
        <TextBlock Name="tbState" ></TextBlock>
    </Grid>
</Window>
